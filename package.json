{
  "name": "coveradge",
  "version": "0.3.0",
  "description": "Generate coverage badges during local nyc/istanbul execution",
  "main": "src/index.js",
  "bin": {
    "coveradge": "./bin/index.js"
  },
  "scripts": {
    "eslint": "eslint --ext=js,md,html .",
    "build-coverage-badge": "./bin/index.js",
    "build-cli-svg": "clp --format=svg --config=\"src/optionDefinitions.js\" \"cli.svg\"",
    "test-unit": "mocha --require esm test/**",
    "test": "npm run eslint && npm run test-unit",
    "test-cov": "nyc npm run test-unit && npm run build-coverage-badge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brettz9/coveradge.git"
  },
  "keywords": [
    "coverage",
    "nyc",
    "istanbul"
  ],
  "author": "Brett Zamir",
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "bugs": {
    "url": "https://github.com/brettz9/coveradge/issues"
  },
  "homepage": "https://github.com/brettz9/coveradge#readme",
  "devDependencies": {
    "@mysticatea/eslint-plugin": "^13.0.0",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "command-line-publish": "^0.7.0",
    "convert-svg-to-png": "^0.5.0",
    "eslint": "^6.8.0",
    "eslint-config-ash-nazg": "^17.1.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-array-func": "^3.1.3",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^21.0.0",
    "eslint-plugin-markdown": "^1.0.1",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-no-use-extend-native": "^0.4.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.0.0",
    "mocha": "^7.0.1",
    "regenerator-runtime": "^0.13.3",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "command-line-basics": "^0.7.0",
    "es6-template-strings": "^2.0.1",
    "gh-badges": "^2.2.1"
  }
}
