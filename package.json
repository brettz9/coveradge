{
  "name": "coveradge",
  "version": "0.4.0",
  "description": "Generate coverage badges during local nyc/istanbul execution",
  "main": "src/reporter.js",
  "bin": {
    "coveradge": "./bin/index.js"
  },
  "nyc": {
    "reporter": [
      "text",
      "json-summary"
    ]
  },
  "coveradgeOptions": {
    "output": "./badges/coverage-badge.svg"
  },
  "scripts": {
    "eslint": "eslint --ext=js,md,html .",
    "cli": "./bin/index.js",
    "build-cli": "clp --format=svg --config=\"src/optionDefinitions.js\" \"cli.svg\"",
    "test-unit": "rimraf node_modules/.cache && nyc --reporter ../../src/reporter.js --reporter text --reporter json-summary mocha --require chai/register-expect --require esm test/*.js",
    "test": "npm run eslint && npm run test-unit",
    "test-cov": "nyc npm run test-unit && npm run cli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brettz9/coveradge.git"
  },
  "keywords": [
    "coverage",
    "nyc",
    "istanbul"
  ],
  "author": "Brett Zamir",
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "bugs": {
    "url": "https://github.com/brettz9/coveradge/issues"
  },
  "homepage": "https://github.com/brettz9/coveradge#readme",
  "devDependencies": {
    "@mysticatea/eslint-plugin": "^13.0.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "command-line-publish": "^0.7.0",
    "convert-svg-to-png": "^0.5.0",
    "eslint": "^6.8.0",
    "eslint-config-ash-nazg": "^17.5.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-array-func": "^3.1.4",
    "eslint-plugin-compat": "^3.5.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsdoc": "^22.1.0",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-no-unsanitized": "^3.1.0",
    "eslint-plugin-no-use-extend-native": "^0.4.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^17.2.0",
    "esm": "^3.2.25",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@istanbuljs/load-nyc-config": "^1.0.0",
    "array-flat-polyfill": "^1.0.1",
    "badge-up": "https://github.com/yahoo/badge-up#516d7a18924ce33000595a7c2b567c75890fa243",
    "command-line-basics": "^0.8.0",
    "es6-template-strings": "^2.0.1",
    "istanbul-lib-report": "^3.0.0"
  }
}
